#!/usr/bin/env bash

set -Eeuo pipefail

BASE_DIR=$(dirname "${BASH_SOURCE[0]:-$0}")
cd "${BASE_DIR}/.." || exit 127

# shellcheck source=./helpers.sh
. helpers.sh

PROGRAM=$(basename "${BASH_SOURCE[0]:-$0}")
VERSION=0.4.0

function display_help() {
  cat <<EOF
  $(help_section Usage)
    ${PROGRAM} [options] (<theme> | <screen>)

  $(help_section Themes)
    dark
    light

  $(help_section Screens)
    // work            2 screens stacked (eDP1 on bottom)
    work            2 screens side-by-side (eDP1 on right)
    home            2 screens side-by-side
    pitch           2 screens 2nd on top
    chill           1 screen (eDP1)
    focus           1 screen (HDMI1)
    demo            2 screens mirror and notifications off

  $(help_section Options)
    -h, --help      Show this screen.
    -v, --version   Show version.

  $(help_section Notes)
    $(italic "Activate the notifications with 'dunstctl set-pause false'!")
EOF
}

function i3restart() {
  i3-msg restart >/dev/null
  numlockx on
  setcapslock off
  setxkbmap -option ctrl:nocaps
}

function toggle_keyboard_backlight() {
  declare -r brightness=$(cat /sys/class/leds/tpacpi::kbd_backlight/brightness)

  if [[ $brightness -eq 0 ]]; then
    echo 1 >/sys/class/leds/tpacpi::kbd_backlight/brightness
  else
    echo 0 >/sys/class/leds/tpacpi::kbd_backlight/brightness
  fi
}

function change_theme_to() {
  declare -r alacritty_config="$DOTFILES/alacritty/alacritty.yml"
  declare -r git_config="$DOTFILES/git/gitconfig"
  declare -r code_settings="$HOME/.config/Code/User/settings.json"
  declare -r code_oss_settings="$HOME/.config/Code - OSS/User/settings.json"
  declare -r theme="$1"

  sed -i "s/colors:.*/colors: *${theme}/g" "${alacritty_config}"

  case $theme in
    dark)
      sed -i -e 's/"workbench.colorTheme": ".*"/"workbench.colorTheme": "GitHub Dark"/g' "${code_oss_settings}"
      sed -i -e 's/"workbench.colorTheme": ".*"/"workbench.colorTheme": "GitHub Dark"/g' "${code_settings}"
      sed -i "s/light =.*/light = false/g" "${git_config}"
      ;;
    light)
      sed -i -e 's/"workbench.colorTheme": ".*"/"workbench.colorTheme": "GitHub Light"/g' "${code_oss_settings}"
      sed -i -e 's/"workbench.colorTheme": ".*"/"workbench.colorTheme": "GitHub Light"/g' "${code_settings}"
      sed -i "s/light =.*/light = true/g" "${git_config}"
      ;;
  esac

  i3restart

  echo "Theme changed to $theme!"
}

function get_theme() {
  declare -r config_file="$DOTFILES/alacritty/alacritty.yml"

  grep 'colors: *' $config_file | awk -F '*' '{ print $2 }'
}

function change_screen_to() {
  case $1 in
    work)
      autorandr granjinhos
      ;;
    home)
      autorandr home
      ;;
    chill) ;;

    pitch) ;;

    focus) ;;

    demo)
      dunstctl set-paused true
      ;;
  esac

  nitrogen --restore 2>/dev/null
  i3restart
  echo "Changed to mode $1!"
}

case ${1:-error} in
  -h | --help)
    display_help
    ;;
  -v | --version)
    display_version "$PROGRAM" "$VERSION"
    ;;
  -t | --theme)
    get_theme
    ;;
  -k | --keyboard)
    toggle_keyboard_backlight
    ;;
  dark | light)
    change_theme_to "$1"
    ;;
  work | home | chill | pitch | focus | demo)
    change_screen_to "$1"
    ;;
  *)
    display_help >&2
    exit 1
    ;;
esac
